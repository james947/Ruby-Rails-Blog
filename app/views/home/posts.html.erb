<%= content_for(:title, "Posts") %>
<div class="row">
    <div class="col">
      <ul class="list-group">
        <% @categories.each do |category| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= category.name %>
          </li>
        <% end %>
      </ul>
  </div>
  <div class="col">
    <% @posts.each do |post| %>
      <div class="card card small hoverable" style="width:800px">
        <div class="card-content">
          <h1 class="card-title"><%= post.title %></h1>
          <h5 class="card-text"><%= post.subtitle %></h5>
          <p class="truncate" ><%= sanitize post.content %><p>
        </div>
        <div class="card-action">
          <%= link_to "Read more", show_path(post.id), class: " btn right" %>
          <small><%= post.author %></small>
          <small><%= post.created_at.strftime('%B %d %Y') %></small>
        </div>
      </div>
    <% end %>
  </div>
</div>
