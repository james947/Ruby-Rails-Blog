<%= content_for(:title, "Posts") %>
<div class="row">
    <div class="col s3">
      <div class="card">
        <div class="card-content category">
          <ul class="list-group">
            <% @categories.each do |category| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= category.name %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
  </div>
  <div class="col s7">
    <% @posts.each do |post| %>
      <div class="card small hoverable">
        <div class="card-content">
          <p class="card-title">#<%= post.title %></p>
          <p class="truncate" ><%= sanitize post.content %><p>
        </div>
        <div class="card-action">
        <div id="btn">
          <%= link_to "Read more", show_path(post.id), class: " btn right" %>
        </div>
          <small><%= post.author %></small>
          <small><%= post.created_at.strftime('%B %d %Y') %></small><br>
          <span><i class="fas fa-thumbs-up"></i> 11</span> <i class="fab fa-readme"></i> 304
          <i class="fas fa-share-alt"></i>
        </div>
      </div>
    <% end %>
    <div class="right">
    <%== pagy_nav_materialize(@pagy) %>
    </div>
  </div>
</div>
