<div class="row">
<div class="col s3">
  <ul class="list-group">
  <% @categories.each do |category| %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <%= category.name %>
  </li>
  <% end %>
</ul>
</div>
<div class="col s6">
<% @posts.each do |post| %>
<div class="card hoverable" style="width:800px">
  <div class="card-content">
    <h1 class="card-title"><%= post.title %></h1>
    <h5 class="card-text"><%= post.subtitle %></h5>
    <p class="truncate" ><%= post.content %><p>
    <a href="/posts/<%= post.id %>" class="btn btn-secondary float-right right">Read more</a>
  </div>
  <div class="card-footer">
    <small><%= post.author %></small>
    <small><%= post.created_at.strftime('%B %d %Y, %l:%M%P') %></small>
  </div>
</div><br>
<% end %>
</div>
</div>

         

