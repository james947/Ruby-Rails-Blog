<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>
 <div class="row">
<form class="col s8" action="/posts" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="row">
    <div class="input-field"> 
      <label for="title">Title</label>
      <input type="text" class="validate" name="title" placeholder="">
      </div>
  </div>
  <div class="row">
  <div class="input-field"> 
    <label for="subtitle">Subtitle</label>
    <input type="text" class="validate" name="subtitle" placeholder="">
  </div>
  </div>
  <div class="row">
  <div class="input-field"> 
    <label for="author">Author</label>
    <input type="text" class="validate" name="author" placeholder="">
  </div>
  </div>

  <div class="row">
  <div class="input-field">
  <select id="inputState"  class="browser-default" name ="category_id">
    <option value="" disabled selected>Select Category</option>
    <% @categories.each do |category| %>
        <option value="<%= category.id %>"><%= category.name %></option>
    <% end %>
  </select>
  </div>
  </div>

  <div class="row">
  <div class="input-field">
    <label for="content">Content</label>
    <textarea class="materialize-textarea" name="content"></textarea>
  </div>
  </div>
  <button type="submit" class="btn btn-secondary btn-block float-right">Submit</button>
</form>
</div>
